<style>
<% _.each(presentations, function (presentation) { %>
  #id<%= presentation.id %>{
    background:
    linear-gradient(
      rgba(0, 0, 0, 0.55),
      rgba(0, 0, 0, 0.55)
    ),
    url(<%= presentation.get('image').url() %>);
    background-size: 100%;
    background-position: 50%;
    color : white;
    height: 100px;
    padding-top: 25px;
  }
<% }) %>
</style>
<script type="text/babel">
  var Titre = React.createClass({
    render: function() {
      return(
        <div className="titreLeftMenu">
          <center>
            <h1>INSA JPO</h1>
          </center>
        </div>
      );
    }
  });

<% _.each(presentations, function(presentation) { %>

  var Presentation<%= presentation.id %> = React.createClass({
    render: function() {
      return(
        <a id="id<%= presentation.id %>" href="#" className="list-group-item listePresentation" lat="<%= presentation.get('location').latitude %>" long="<%= presentation.get('location').longitude %>">
          <div className="row">
            <div className="col-xs-1"><span className="glyphicon glyphicon-plus" aria-hidden="true"></span></div>
            <div className="col-xs-3"><%= presentation.get('name') %></div>
            <div id="start<%= presentation.id %>" className="col-xs-3"></div>
            <div id="end<%= presentation.id %>" className="col-xs-3"></div>
          </div>
        </a>
      );
    }
  });

<% })%>
  var ListePresentation = React.createClass({
    render: function() {
      return(
        <div className="list-group">
          <% _.each(presentations, function(presentation) { %>
            <Presentation<%= presentation.id %> />
          <% })%>
        </div>
      );
    }
  });

  var LeftMenu = React.createClass({
    render: function() {
      return (
        <div className="">
          <Titre />
          <ListePresentation />
        </div>
      );
    }
  });
  ReactDOM.render(
    <LeftMenu />,
    document.getElementById('menuContainer')
  );
</script>
<script src="js/maps.js"></script>
<script type="text/javascript">
  $(function () {
      <% _.each(presentations, function (presentation) { %>
        var start = moment(Date.parse("<%= presentation.get('start') %>")).format('DD/MM/YYYY HH:mm');
        $("#start<%= presentation.id %>").text(start);
        var end = moment(Date.parse("<%= presentation.get('end') %>")).format('DD/MM/YYYY HH:mm');
        $("#end<%= presentation.id %>").text(end);
        <% })%>

        $(".listePresentation").click(function(){
          $('.active').each(function(){
            $(this).attr('class', "listePresentation list-group-item");
          });
          $(this).attr('class', "listePresentation active list-group-item");
          latitudeDestination = $(this).attr('lat');
          longitudeDestination = $(this).attr('long');
          initMap();
        });
  });
</script>

<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCirxzx91LVmHxOjOBrcWtE20Ck3ArLynw&callback=initMap">
</script>
