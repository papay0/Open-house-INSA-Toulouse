<div class="container">

	<h1>Create presentation</h1>
	<form class="form-horizontal" role="form" method="POST" action="/presentations/createPost">
		<fieldset>

			<!-- Text input-->
			<div class="container">
				<legend>Nom de la presentation</legend>
				<div class="form-group">
					<div class="col-md-5">
						<input id="textinput" name="name" type="text" placeholder="Nom de la présentation" class="form-control input-md" required="">

					</div>
				</div>
			</div>

			<!-- PARTIE BOOTSTRATDATEPICKER -->
			<div class="container">
				<legend>Début</legend>
				<div class='col-md-5'>
					<div class="form-group">
						<div class='input-group date' id='datetimepicker6'>
							<input id="textinput" name="start" type='text' placeholder="Début présentation"  class="form-control" required="" />
							<span class="input-group-addon">
								<span class="glyphicon glyphicon-calendar"></span>
							</span>
						</div>
					</div>
				</div>
			</div>
			<div class="container">
				<legend>Fin</legend>
				<div class='col-md-5'>
					<div class="form-group">
						<div class='input-group date' id='datetimepicker7'>
							<input id="textinput" name="end" type='text' placeholder="Fin présentation" class="form-control" required=""/>
							<span class="input-group-addon">
								<span class="glyphicon glyphicon-calendar"></span>
							</span>
						</div>
					</div>
				</div>
			</div>

			<!-- Button -->
			<div class="container" style="margin-top:30px;">
				<div class="form-group">
					<div class="col-md-4">
						<button type="submit" name="create" class="btn btn-primary">Créer présentation</button>
					</div>
				</div>
			</div>

		</fieldset>
	</form>
</div>

<script type="text/javascript">
	$(function () {
		$('#datetimepicker6').datetimepicker();
		$('#datetimepicker7').datetimepicker({
	            useCurrent: false //Important! See issue #1075
	        });
		$("#datetimepicker6").on("dp.change", function (e) {
			$('#datetimepicker7').data("DateTimePicker").minDate(e.date);
		});
		$("#datetimepicker7").on("dp.change", function (e) {
			$('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
		});
	});
</script>
